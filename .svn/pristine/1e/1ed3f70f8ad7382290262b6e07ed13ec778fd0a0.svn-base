<!-- 导航栏 -->
<div class="weadmin-nav">
	<span class="layui-breadcrumb" style="visibility: visible;">
		<a href="/">首页</a><span lay-separator="">/</span><a href="ForMatLists.html">手机规格</a><span lay-separator="">/</span><a><cite>增加</cite></a>
	</span>
</div>
<div class="weadmin-body">
	<form class="layui-form layui-form-pane" action="" lay-filter="example">
		<div class="layui-form-item">
			<div class="layui-form-item">
				<label class="layui-form-label"><i class="required-color">*</i>设备品牌</label>
				<div class="layui-input-block">
					<input name="brand" required="" lay-verify="required" placeholder="请输入品牌" autocomplete="off" class="layui-input" type="text">
				</div>
			</div>
			<div class="layui-form-item">
				<label class="layui-form-label"><i class="required-color">*</i>设备型号</label>
				<div class="layui-input-block">
					<input name="models" required="" lay-verify="required" placeholder="请输入型号" autocomplete="off" class="layui-input" type="text">
				</div>
			</div>
			<div class="layui-form-item">
				<label class="layui-form-label"><i class="required-color">*</i>机身颜色</label>
				<div class="layui-input-block">
					<input name="color" required="" lay-verify="required" placeholder="请输入机身颜色" autocomplete="off" class="layui-input" type="text">
				</div>
			</div>
			<div class="layui-form-item">
				<label class="layui-form-label"><i class="required-color">*</i>内存容量</label>
				<div class="layui-input-block">
					<input name="rom" required="" lay-verify="required" placeholder="请输入内存容量" autocomplete="off" class="layui-input" type="text">
				</div>
			</div>
			<div class="layui-form-item">
				<label class="layui-form-label"><i class="required-color">*</i>排序</label>
				<div class="layui-input-inline">
					<input required="required" lay-verify="px" placeholder="请输入排序" autocomplete="off" class="layui-input" type="number" name="px" value="0">
				</div>
				<div class="layui-form-mid layui-word-aux">数字越小越靠前</div>
			</div>
			<div class="layui-form-item">
				<div class="layui-input-block">
					<button class="layui-btn" lay-submit="" lay-filter="ActAdd">立即提交</button>
				</div>
			</div>
		</div>
	</form>
</div>
<script>
    layui.use('form', function () {
        var form = layui.form;
		//自定义验证规则
		form.verify({
			px: function(value){
				if(value < 0){
					return '排序至少得大于0啊';
				}
				else if(value > 100){
					return '排序不得大于100啊';
				}
			}
		});
		
        form.on('submit(ActAdd)', function (data) {
			$.post(
				'AddFormat',
				data.field,
				function(obj){
					if(obj.ret == 200){
						layer.msg(obj.msg, {time: 1500}, function(){
							window.location.reload();
						});
					}
					else{
						layer.msg(obj.msg, {time: 1500, anim: 6});
					}
				}
			);
            return false;
        });
    });
</script>