<script>
    layui.use('form', function () {
        layui.form.on('submit(ActUpStore)', function (data) {
            $.post(
                "upStore",
                data.field,
                function (obj) {
                    if (obj.ret == 200) {
                        layer.msg(obj.msg, {time: 1500}, function () {
                            window.location.reload();
                        });
                    }
                    else {
                        layer.msg(obj.msg, {time: 1500, anim: 6});
                    }
                }
            );
            return false;
        });
