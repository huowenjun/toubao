<script>
    layui.use('form', function () {
        var form = layui.form;
        form.on('submit(ActUpRole)', function (data) {
			$.post(
				'UpRole',
				data.field,
				function(obj){
					if(obj.ret == 200){
						layer.msg(obj.msg, {time: 1500}, function(){
							window.location.reload();
						});
					}
					else{
						layer.msg(obj.msg, {time: 1500, anim: 6});
					}
				}
			);
            return false;
        });
    });
</script>